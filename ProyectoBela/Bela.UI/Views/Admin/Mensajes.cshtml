@model IEnumerable<Bela.UI.Models.MensajeContacto>

@{
    ViewBag.Title = "Liceo de puriscal";
    Layout = "~/Views/Shared/_Perfil.cshtml";
}
<div id="wrapper">
    <div class="overlay"></div>

    <!-- Sidebar -->
    <nav class="navbar navbar-inverse navbar-fixed-top menu" id="sidebar-wrapper" role="navigation">
        <ul class="nav sidebar-nav">
            <li class="sidebar-brand">
                <a>
                    Menu
                </a>
            </li>
            <li>
                @Html.ActionLink("Inicio", "Inicio", "Admin", null)
            </li>
            <li>
                @Html.ActionLink("Crear Noticias", "CrearNoticia", "Admin")
            </li>
            <li>
                @Html.ActionLink("Mensajes", "Mensajes", "Admin", null, new { @class = "activeMenu" })
            </li>
            <li>
                @Html.ActionLink("NoticiasInternas", "NoticiasInternas", "Noticia")
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Cuentas<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                    <li class="dropdown-header">Opciones</li>
                    <li>@Html.ActionLink("Crear Cuenta", "CrearCuenta", "Usuario")</li>
                    <li><a href="#">Modificar Cuenta</a></li>
                    <li><a href="#">Eliminar Cuenta</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <button type="button" class="hamburger is-closed menubtn" data-toggle="offcanvas">
            <span class="hamb-top"></span>
            <span class="hamb-middle"></span>
            <span class="hamb-bottom"></span>
        </button>
        <br />
        <div class="text-center"><h2>Lista Mensajes</h2></div>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">

                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.idMensaje)</th>
                                    <th>@Html.DisplayNameFor(model => model.asunto)</th>
                                    <th>@Html.DisplayNameFor(model => model.correo)</th>
                                    <th>@Html.DisplayNameFor(model => model.mensaje)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.idMensaje)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.asunto)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.correo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.mensaje)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Responder", "Admin", new { /* id=item.PrimaryKey */ }) |
                                            @Html.ActionLink("Borrar", "Admin", new { /* id=item.PrimaryKey */ })

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>



    </div>
    <!-- /#page-content-wrapper -->
</div>
<!-- /#wrapper -->

<div style="margin-bottom:454px;"></div>
