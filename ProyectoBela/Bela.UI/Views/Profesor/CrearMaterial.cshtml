@{
    ViewBag.Title = "Liceo de puriscal";
    Layout = "~/Views/Shared/_Perfil.cshtml";
    //List<>
}


<div id="wrapper">
    <div class="overlay"></div>

    <!-- Sidebar -->
    <nav class="navbar navbar-inverse navbar-fixed-top menu" id="sidebar-wrapper" role="navigation">
        <ul class="nav sidebar-nav">
            <li class="sidebar-brand">
                <a>
                    Menu
                </a>
            </li>
            <li>
                @Html.ActionLink("Inicio", "Inicio", "Admin")
            </li>
            <li>
                @Html.ActionLink("Crear Material", "CrearMaterial", "Profesor", null, new { @class = "activeMenu" })
            </li>
            <li>@Html.ActionLink("Administrar Materiales", "Materiales", "Profesor")</li>
            <li>
                @Html.ActionLink("NoticiasInternas", "NoticiasInternas", "Noticia")
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Cuentas<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                    <li class="dropdown-header">Opciones</li>
                    <li>@Html.ActionLink("Mi Cuenta", "MiCuenta", "Usuario")</li>
                </ul>
            </li>
        </ul>
    </nav>
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <button type="button" class="hamburger is-closed menubtn" data-toggle="offcanvas">
            <span class="hamb-top"></span>
            <span class="hamb-middle"></span>
            <span class="hamb-bottom"></span>
        </button>


        @using (Html.BeginForm("CrearMaterial", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            Html.ValidationSummary(true);
            Html.EnableClientValidation(true);


            <section class="section-padding" id="contact">
                <div class="container">
                    <div class="row white">
                        <div class="col-md-8 col-md-offset-4">
                            <div class="section-title">
                                <h2 class="head-title black">Crear Material</h2>
                            </div>
                        </div>
                        <div class="col-md-11 col-md-offset-4">
                            <div class="col-md-4 col-sm-6" style="padding-left:0px;">
                                <h3 class="cont-title-login">Ingrese los datos necesarios para la creacion del material</h3>

                                <div class="contact-info">
                                    <form action="" method="post" role="form" class="contactForm" enctype="multipart/form-data">

                                        @*<div class="form-group">
                                                @Html.Label("Tipo noticia")
                                                @Html.DropDownList("dropIdMateridaDeta", (SelectList)ViewBag.Materias, "Seleccione Materia", new { @class = "form-control" })
                                            </div>*@

                                        <div class=" form-group">
                                            @Html.Label("Titulo")
                                            @Html.TextBox("txtTitulo", null, new { @class = "form-control", @name = "titulo", @placeholder = "Titulo" })

                                        </div>

                                        <div class="form-group">
                                            @Html.Label("Descripcion")
                                            @Html.TextArea("txtDescripcion", null, new { @class = "form-control", @placeholder = "Descripcion" })
                                        </div>



                                        <div class="form-group">
                                            <label>Material  -Obligatorio</label>
                                            <input type="text" id="txtImagen" name="txtImagen" class="form-control" />
                                            <input type="file" onchange="cambiar()" name="uploadFileMateria" id="file" class="form-control" style="display:none;" />
                                            <div class="text-center">
                                                <input type="button" value="Adjuntar material" class="btn btn-ghost" onclick="adjuntarImagen()" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label>Materiales adicionales</label>
                                            <br>
                                            <input type="file" onchange="" name="uploadfilesMateria" id="files" class="form-control" multiple style="display:none;" />
                                            <div class="text-center">
                                                <input type="button" value="Adjuntar materiales" class="btn btn-ghost" onclick="adjuntarImagenes()" />
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-crear">Crear Material</button>

                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </section>

        }

    </div>
    <!-- /#page-content-wrapper -->
</div>
<!-- /#wrapper -->

<script>
    function adjuntarImagen() {
        document.getElementById('file').click();
        document.getElementById('txtImagen').readOnly = true;

    }

    function adjuntarImagenes() {
        document.getElementById('files').click();

    }

    function cambiar() {
        var reader = new FileReader();
        document.getElementById('txtImagen').value = document.getElementById('file').value;
        document.getElementById('Img').src = document.getElementById('txtImagen').value;
        reader.readAsDataURL(this.files[0]);
    }


    function mostrarImagen(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#Img').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#file").change(function () {
        mostrarImagen(this);
    });



</script>

