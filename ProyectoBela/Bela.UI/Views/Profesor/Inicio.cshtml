@model IEnumerable<Bela.UI.Models.MateriaDeta>

@{
    ViewBag.Title = "Liceo de puriscal";
    Layout = "~/Views/Shared/_Perfil.cshtml";
}


<div id="wrapper">
    <div class="overlay"></div>

    <!-- Sidebar -->
    <nav class="navbar navbar-inverse navbar-fixed-top menu" id="sidebar-wrapper" role="navigation">
        <ul class="nav sidebar-nav">
            <li class="sidebar-brand">
                <a>
                    Menu
                </a>
            </li>
            <li>
                @Html.ActionLink("Inicio", "Inicio", "Profesor", null, new { @class = "activeMenu" })
            </li>
            <li>
                @Html.ActionLink("Crear Material", "CrearMaterial", "Profesor")
            </li>
            <li>
                @Html.ActionLink("Administrar Materiales", "Materiales", "Profesor")
            </li>
            <li>
                @Html.ActionLink("NoticiasInternas", "NoticiasInternas", "Noticia")
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Cuentas<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                    <li class="dropdown-header">Opciones</li>
                    <li>@Html.ActionLink("Mi Cuenta", "MiCuenta", "Usuario")</li>
                </ul>
            </li>
        </ul>
    </nav>
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <button type="button" class="hamburger is-closed menubtn" data-toggle="offcanvas">
            <span class="hamb-top"></span>
            <span class="hamb-middle"></span>
            <span class="hamb-bottom"></span>
        </button>

        <div class="container text-center">
            <p><span class="fas fa-user  iconInicioUser"></span></p>
            <h1 class="titulos">Prof: @Session["UserNombre"].ToString() @Session["UserApellido1"] @Session["UserApellido2"] </h1>

            <p class="parrafos" style="font-size:18px;">Materias</p>
            <p><span class="glyphicon glyphicon-chevron-down"></span></p>
        </div>


        @*<div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="wow bounceIn" data-wow-offset="0" data-wow-delay="0.4s">
                        <div class="align-center">
                            <h4>Ciencias</h4>
                            <br />
                            <h3>Seccion: 7-1</h3>

                            <div class="ficon">
                                @Html.ActionLink("Administrar", "AdministrarMateria", "Profesor", null, new { @class = "btn btn-default" })
                            </div>
                        </div>
                    </div>
                </div>*@

        <div class="container">
            <div class="row">

                @foreach (var item in Model)
                {

                    <div class="col-md-4" onclick="location.href='@Url.Action("ListaMateriales","Material", new {idDetalleMateria=item.idDetalleMateria })'">
                        <div class="wow bounceIn">
                            <div class="align-center">
                                <h4>@Html.DisplayFor(modelItem => item.materia)</h4>
                                <br />
                                <h3>@Html.DisplayFor(modelItem => item.seccion)</h3>

                                <div class="ficon">
                                    <a class="btn btn-warning" role="button" onclick="location.href='@Url.Action("ListaMateriales", "Material", new {idMaterial=item.idDetalleMateria })'">Administrar</a>
                                </div>
                            </div>
                        </div>
                    </div>

                }


            </div>
        </div>





    </div>
    <!-- /#page-content-wrapper -->
</div>
<!-- /#wrapper -->