@model Bela.UI.Models.NoticiaDetalles

@{
    ViewBag.Title = "Liceo de puriscal";
    Layout = "~/Views/Shared/_Noticia.cshtml";
    //List<Bela.Datos.ImagenNoticia> lista = (List<Bela.Datos.ImagenNoticia>)ViewBag.Imagenes;
}


<section class="background-" style="margin-top:30px;">
    <div class="container">
        <div class="breadcrumbs">
            <p class="text-muted text-right">@Html.DisplayFor(model => model.fechaYHora)</p>
            <ul class="breadcrumb">
                <li><p style="color: #FFD34E;">Creado por</p></li>
                <li>@Html.DisplayFor(model => model.nombre)  @Html.DisplayFor(model => model.apellido1)</li>
            </ul>

        </div>
        <h1>@Html.DisplayFor(model => model.titulo)</h1>
        <p class="">@Html.DisplayFor(model => model.descripcion)</p>
    </div>
</section>

<section class="blog-post" style="margin-top:50px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="post-content margin-bottom--big">
                    <p><img src="@Html.DisplayFor(model => model.imagen)" alt="Example blog post alt" class="img-responsive"></p>
                    <p>@Html.DisplayFor(model => model.contenido)</p>
                </div>
            </div>

            @*imagenes*@


        </div>
    </div>
</section>
