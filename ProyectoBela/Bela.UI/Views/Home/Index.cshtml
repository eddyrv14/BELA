@model IEnumerable<Bela.UI.Models.Noticia>

@{
    ViewBag.Title = "Liceo de puriscal";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>

<section id="intro" class="section intro">
    <div class="container">
        <div class="col-md-8 col-md-offset-2 text-center">
            <h3 class="titulosHome">Te damos la bienvenida</h3>
            <p class="parrafosHome"><b>A la paginá</b></p>
        </div>
    </div>
</section>



<section id="1"></section>
<div class="container" style="padding-top:50px;">

    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h1 class="titulosHome">Informacion</h1>
                    <hr class="my-4">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row wow fadeInUp">

                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box mt-5 mx-auto">
                        <a onclick="location.href='@Url.Action("nosotros","Informacion")'"> <i class="fa fa-4x fas fa-building text-services text-warning mb-3 sr-icons"></i></a>
                        <h3 class="mb-3">Nosotros</h3>
                        <p class="parrafosHome mb-0">Pequeña reseña sobre la institucion</p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box mt-5 mx-auto">
                        <a onclick="location.href='@Url.Action("Noticias", "Noticia")'"> <i class="fa fa-4x fa-newspaper text-primary  text-services-noticias text-services mb-3 sr-icons"></i></a>
                        <h3 class="mb-3">Noticias</h3>
                        <p class="parrafosHome mb-0">
                            Puedes estar al tanto de las diferentes acontecimientos que suceden
                            en la institucion
                        </p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 text-center ">
                    <div class="service-box mt-5 mx-auto">
                        <a onclick="location.href='@Url.Action("matricula","Informacion")'"><i class="fa fa-4x fas fa-address-card text-services-noticias text-services  text-services-matricula sr-icons"></i></a>
                        <h3 class="mb-3">Matricula</h3>
                        <p class="parrafosHome mb-0">El proceso de matricula</p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box mt-5 mx-auto">
                        <a onclick="location.href='@Url.Action("bachilleratoInternacional","Informacion")'"><i class="fa fa-4x fas fa-graduation-cap text-primary text-services"></i></a>
                        <h3 class="mb-3">Bachillerato internacional</h3>
                        <p class="parrafosHome mb-0">Conoce mas acerca sobre Bachillerato internacional!</p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6  col-md-offset-3 text-center">
                    <div class="service-box mt-5 mx-auto">
                        <a onclick="location.href='@Url.Action("apoyoEducativo","Informacion")'"><i class="fa fa-4x fas fa-handshake text-services-apoyo text-services"></i></a>
                        <h3 class="mb-3">Apoyo educativo</h3>
                        <p class="parrafosHome mb-0">Conoce mas acerca de la diferentes ayudas que puedes obtener!</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6  text-center">
                    <div class="service-box mt-5 mx-auto">
                        <a onclick="location.href='@Url.Action("liceoComunidad","Informacion")'"><i class="fa fa-4x fas fa-users text-services-liceoycomunidad text-services"></i></a>
                        <h3 class="mb-3">Liceo y comunidad </h3>
                        <p class="parrafosHome mb-0">Ve cuales actividades se ofrecen en el liceo</p>
                    </div>
                </div>

            </div>
        </div>
    </section>
</div>

<section class="spacer bg3">
    <div class="container">
        <div class="row">
            <div class="span12 aligncenter flyLeft">
                <blockquote class="large">
                    Puedes estar al tanto de la diferente información perteneciente a nuestra institución
                </blockquote>
            </div>
        </div>
    </div>
</section>



<section class="section--padding-bottom-small wow fadeInUp news">
    <div class="container">
        <div class="text-center">
            <h1 class="titulosHome">Ultimas noticias</h1>
        </div>
        <div class="row">

            @foreach (var item in Model)
            {

                <div class="col-sm-4">
                    <div class="post">
                        <div class="image"><a onclick="location.href='@Url.Action("Detalles", "Noticia", new { idNoticia=item.idNoticia})'"><img src="@Html.DisplayFor(modelItem => item.imagen)" alt="" class="img-responsive"></a></div>
                        <h3><a onclick="location.href='@Url.Action("Detalles", "Noticia", new { idNoticia=item.idNoticia})'">@Html.DisplayFor(modelItem => item.titulo)</a></h3>
                        <p class="post__intro">@Html.DisplayFor(modelItem => item.descripcion)</p>
                        <p class="read-more"><a onclick="location.href='@Url.Action("Detalles", "Noticia", new { idNoticia=item.idNoticia})'" class="btn btn-ghost">Leer mas</a></p>
                    </div>
                </div>

            }
        </div>
    </div>
</section>

<a href="#" class="scrollup"><i id="sc" class="fas fa-chevron-up icon-square icon-bgdark icon-2x"></i></a>



<script src="~/Scripts/scroll-up.js"></script>
